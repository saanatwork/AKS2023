@model AKS.ViewModel.UserVM.UserDashBoardVM
@{
    ViewBag.Title = "Home Page";
}
<div class="row dashboard-box mt-3 pt-1">
    <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12">
        <div class="card" style="background-color: #EDF3F6">
            <p class="square-after f-w-600 header-text-primary">Current Gold Rate<i class="fa fa-circle"> </i></p>
            <table style="width:100%">
                <tr>
                    <td style="width:10px"></td>
                    <td rowspan="2" style="vertical-align: middle; text-align: right">
                        <img src="~/img/Gold.png" alt="gold" class="img-fluid" Height="75" width="75" />
                    </td>
                    <td style="vertical-align: bottom; text-align: left;">
                        <div><h1>@Model.CurrentGoldrate.GoldRate INR</h1></div>
                        <div><h4>24K - 10Gram</h4></div>
                    </td>
                    <td style="width:10px"></td>
                </tr>
            </table>
            <table style="width:100%;margin-top:30px">
                <tr>
                    <td>
                    </td>
                    <td style="border:1px solid red;padding:10px;font-weight:bold">
                        Rate in INR/Gram.
                    </td>
                </tr>
                <tr>
                    <td style="border:1px solid red;padding:10px">
                        Gold : 24 K
                    </td>
                    <td style="border:1px solid red;padding:10px">
                        @Model.CurrentGoldrate.GoldRate24K1GM /-
                    </td>
                </tr>
                <tr>
                    <td style="border:1px solid red;padding:10px">
                        Gold : 22 K
                    </td>
                    <td style="border:1px solid red;padding:10px">
                        @Model.CurrentGoldrate.GoldRate22K1GM /-
                    </td>
                </tr>
                <tr>
                    <td style="border:1px solid red;padding:10px">
                        Gold : 18 K
                    </td>
                    <td style="border:1px solid red;padding:10px">
                        @Model.CurrentGoldrate.GoldRate18K1GM /-
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
        <div class="card" style="background-color: #EDF3F6">
            <p class="square-after f-w-600 header-text-primary">Sale Price Calculator<i class="fa fa-circle"> </i></p>
            <table class="w-100">
                <tr>
                    <td style="width:20%">Category :</td>
                    <td style="width:80%">
                        <select id="cCategory"
                                onchange="CategoryClicked()"
                                class="form-select is-invalid"
                                aria-label="Default select example">
                            <option selected value="">Select Item Category</option>
                            @if (Model.CategoryList != null && Model.CategoryList.Count > 0)
                            {
                                foreach (var item in Model.CategoryList)
                                {
                                    <option value="@item.ID">@item.DisplayText</option>
                                }
                            }
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Item :</td>
                    <td>
                        <select id="cItem"
                                onchange="ItemClicked()"
                                class="form-select content border-red myctrlw100 is-invalid wrap"
                                aria-label="Default select example">
                            <option selected value="">Select Item</option>                       
                        </select>

                    </td>
                </tr>
            </table><br/>
            <table class="table table-bordered w-100">
                <thead>
                    <tr>
                        <td style="width:40%"><b>Variant</b></td>
                        <td style="width:10%"><b>Weight</b></td>
                        <td style="width:15%"><b>Rate</b></td>
                        <td style="width:15%"><b>Discount</b></td>
                        <td style="width:15%"><b>Amount</b></td>
                    </tr>
                </thead>
                <tbody id="VariantBody">

                </tbody>
            </table>
        </div>
    </div>
</div>
@section headers{
    <style>
        wrap {
            word-wrap: break-word;
        }
    </style>
}
@section scripts{
    <script src="~/UIContent/JS/CustomePage/CommonReusableJS.js"></script>
    <script src="~/UIContent/JS/CustomePage/User/UserIndexJs.js"></script>

}

