@model AKS.BOL.Accounts.Journal
@{
    ViewBag.Title = "Accounts - Vouchers";
}
<div class="row newTable">
    @Html.HiddenFor(m => m.Header.VoucherNumber)
    <div class="fixedElement">
        <div class="col-md-12">
            <div class="heading_text_btn mb-3 mt-4">
                <div class="leftButton">
                    <button id="btnBack" type="button"
                            onclick="window.location.href='/Accounts/Journal';"
                            class="btn btn-white me-2">
                        <i data-feather="arrow-left-circle"></i>
                        Back
                    </button>
                    @if (!Model.Header.IsUpdated)
                    {
                        <button id="btnDelete" type="button"
                                onclick="BtnDeleteClicked()"
                                class="btn btn-primary me-2">
                            <i data-feather="trash-2"></i>
                            Delete
                        </button>
                        <button id="btnApprove" type="button"
                                    onclick="ApproveBtnClicked()"
                                    class="btn btn-secondary me-2">
                                <i data-feather="check-circle"></i>
                                Approve
                            </button>
                    }
                </div>
                <h2>Voucher - View </h2>
                <div class="rightButton">                    
                    <a class="btn btn-secondary" href="@Url.Action("GeneratePdf","Common", new { ViewUrl ="/Accounts/PrintVoucher?VoucherNumber="+Model.Header.VoucherNumber ,PdfFileName=Model.Header.VoucherNumber })">
                        <i data-feather="printer"></i>
                        Print
                    </a>
                </div>
            </div>
        </div>
    </div>
    @{Html.RenderPartial("_VoucherPrint", Model);}
</div>
@section headers{

}
@section scripts{
    <script src="~/UIContent/JS/CustomePage/CommonReusableJS.js"></script>
    <script src="~/UIContent/JS/CustomePage/Accounts/ViewVoucherJS.js"></script>

}

