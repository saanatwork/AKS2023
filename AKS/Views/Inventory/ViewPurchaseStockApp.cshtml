@model AKS.BOL.Inventory.AppStockView
@{
    ViewBag.Title = "Inventory - Purchase ";
}

<div class="row newTable">
    @Html.HiddenFor(m => m.DocumentFileName)
    @Html.HiddenFor(m => m.DocumentNumber)
    <div class="fixedElement">
        <div class="col-md-12">
            <div class="heading_text_btn mb-3 mt-4">
                <div class="leftButton">
                    <button id="btnBack" type="button"
                            onclick="window.location.href='/Inventory/PurchaseApp';"
                            class="btn btn-white me-2">
                        <i data-feather="arrow-left-circle"></i>
                        Back
                    </button>
                    @if (!Model.IsApproved)
                    {
                        <button id="btnDelete" type="button"
                                onclick="BtnDeleteClicked()"
                                class="btn btn-primary me-2">
                            <i data-feather="trash-2"></i>
                            Delete
                        </button>
                        if (Model.IsDelete)
                        {
                            <button id="btnSubmit" type="button"
                                    onclick="ApproveBtnClicked()"
                                    class="btn btn-secondary me-2">
                                <i data-feather="check-circle"></i>
                                Approve
                            </button>
                        }
                    }
                </div>
                <h2>Approve Purchase Document </h2>
                <div class="rightButton">
                    <button id="btnScanView" type="button"
                            onclick="ViewUploadedFile()"
                            class="btn btn-secondary">
                        <i data-feather="eye"></i>
                        View Uploaded
                    </button>
                    <a class="btn btn-secondary" href="@Url.Action("GeneratePdf","Common", new { ViewUrl ="/Inventory/PrintPurchase?DocumentNumber="+Model.DocumentNumber ,PdfFileName=Model.DocumentNumber })">
                        <i data-feather="printer"></i>
                        Print
                    </a>

                </div>
            </div>
        </div>
    </div>
    @{Html.RenderPartial("_PurchaseDocPrint", Model);}
</div>
@section headers{

}
@section scripts{
    <script src="~/UIContent/JS/CustomePage/CommonReusableJS.js"></script>
    <script src="~/UIContent/JS/CustomePage/Inventory/PurchaseViewAppJS.js"></script>

}